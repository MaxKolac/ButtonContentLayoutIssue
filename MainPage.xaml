<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ButtonContentLayoutIssue.MainPage">

    <VerticalStackLayout Spacing="5">
        <!-- The troublesome Button -->
        <Button HeightRequest="300"
                WidthRequest="300"
                ContentLayout="Top"
                ImageSource="dotnet_bot.png" 
                Text="Lorem ipsum et dolores lorem ipsum et dolores"
                LineBreakMode="WordWrap"
                />
        <Button HeightRequest="300"
                WidthRequest="300"
                ContentLayout="Bottom"
                ImageSource="dotnet_bot.png" 
                Text="Lorem ipsum et dolores lorem ipsum et dolores" 
                LineBreakMode="WordWrap"
                />

        <!-- Button navigating to AnotherPage -->
        <Button HeightRequest="100"
                WidthRequest="300"
                Text="Open another page"
                Clicked="Button_Clicked" />
    </VerticalStackLayout>
</ContentPage>
